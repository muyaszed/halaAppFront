{
  "name": "halaAppFront",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest node_modules/.bin/jest __test__/**/*.spec.js"
  },
  "dependencies": {
    "react": "16.6.3",
    "react-native": "0.57.8",
    "react-native-gesture-handler": "^1.0.12",
    "react-navigation": "^3.0.9"
  },
  "devDependencies": {
    "babel-jest": "23.6.0",
    "detox": "^9.1.2",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "0.51.1",
    "react-native-testing-library": "^1.5.0",
    "react-test-renderer": "^16.7.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/halaAppFront.app",
        "build": "xcodebuild -project ios/halaAppFront.xcodeproj -scheme halaAppFront -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    },
    "test-runner": "jest"
  }
}
