{
  "name": "halaAppFront",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest"
  },
  "dependencies": {
    "react": "16.6.3",
    "react-native": "0.57.8",
    "react-native-config": "^0.11.7",
    "react-native-gesture-handler": "^1.0.12",
    "react-native-vector-icons": "^6.1.0",
    "react-navigation": "^3.0.9",
    "react-navigation-material-bottom-tabs": "^1.0.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-jest": "23.6.0",
    "detox": "^9.1.2",
    "express": "^4.16.4",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "0.51.1",
    "react-native-dotenv": "^0.2.0",
    "react-native-paper": "^2.7.0",
    "react-native-testing-library": "^1.5.0",
    "react-test-renderer": "^16.7.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "testRegex": "__test__/.*\\.(js|jsx)$"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/halaAppFront.app",
        "build": "RN_SRC_EXT=e2e.js xcodebuild -project ios/halaAppFront.xcodeproj -UseNewBuildSystem=NO -scheme halaAppFront -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    },
    "test-runner": "jest"
  }
}
